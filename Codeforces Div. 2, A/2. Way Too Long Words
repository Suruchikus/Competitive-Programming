#include<bits/stdc++.h>
using namespace std;

int main()
{
    // #ifndef ONLINE_JUDGE
    // // for getting input from input.txt
    // freopen("input.txt", "r", stdin);
    // // for writing output to output.txt
    // freopen("out.txt", "w", stdout);
    // #endif
    
    int t;
    cin>>t;
    while(t--){
        string str;
        cin>>str;
        int n=str.length();
        if(n>10){
            cout<<str[0]<<n-2<<str[n-1]<<"\n";
        }
        else{
            cout<<str<<"\n";
        }
    }

    return 0;
}
